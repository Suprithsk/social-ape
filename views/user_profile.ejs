<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social-Ape</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
</head>
<body>
    <%- include('_header'); %>
    <% for (let i of postMessage){%>
        <div class="col-lg-4 mb-4 my-4 mx-4">
            <div class="card bg-info-subtle">

            <div class="card-body">
                <h6 class="card-title"></h6>
                <p class="card-text"><b>Post details:</b> <br> <%=i.content%></p>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#myModal1">Edit post</button>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#myModal2"><a href="/posts/load-comments">Comments</a></button>


                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Edit post</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form method="post" action="/posts/edit">
                                <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label required">Type the message to be edited</label>
                                            <textarea class="form-control" name="content" ></textarea>
                                            <input type="hidden" name="id" value="<%=i._id%>" readonly>
                                        </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Comment</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form method="post" action="/posts/comments">
                                <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label required">Add Comment</label>
                                            <textarea class="form-control" placeholder="Your Message" name="content"></textarea>
                                            <input type="hidden" name="user_id" value="<%=i.user.id%>" readonly>
                                            <input type="hidden" name="post_id" value="<%=i._id%>" readonly>
                                        </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>

            </div>
        </div>
      </div>
      <%}%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>
</html>
